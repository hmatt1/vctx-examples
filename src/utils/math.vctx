


component Alu(
    in a: u8, 
    in b: u8, 
    in opcode: u8, 
    out y: u8, 
    out is_zero: u1
) {

    wire OP_ADD : u8 = 0
    wire OP_SUB : u8 = 1
    wire OP_AND : u8 = 2
    wire OP_OR  : u8 = 3

    when (opcode == OP_ADD) {
        y := a + b
    }
    elsewhen (opcode == OP_SUB) {
        y := a - b
    }
    elsewhen (opcode == OP_AND) {
        y := a & b
    }
    elsewhen (opcode == OP_OR) {
        y := a | b
    }

    is_zero := (y == 0)
}